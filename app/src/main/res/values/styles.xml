<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!--Text Style-->
    <style name="text_style">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="text_style.head_num">
        <item name="android:textColor">@color/head_num_text</item>
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>
    <style name="text_style.head_text">
        <item name="android:textColor">@color/head_info_text</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>
    <style name="text_style.body_edit_text">
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>

    <!--Head-->
    <style name="head_info_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:layout_marginBottom">@dimen/margin_24</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="head_text_view_num" parent="text_style.head_num">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="head_text_view_info" parent="text_style.head_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>


    <!--Body-->
    <!-- Information container -->
    <style name="info_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_marginTop">@dimen/margin_24</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="info_container.self_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="icon.left">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/margin_16</item>
    </style>
    <style name="icon.right">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/margin_24</item>
    </style>

    <!--InputTextEdits-->
    <style name="input_text_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="input_text" parent="@style/text_style.body_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:background">#fafafa</item>
    </style>

    <style name="input_text.mobile">
        <item name="android:inputType">phone</item>
        <item name="android:hint">@string/mobile_hint</item>
        <item name="android:text">@string/mobile_text</item>
    </style>
    <style name="input_text.email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/email_hint</item>
        <item name="android:text">@string/mail_text</item>
    </style>
    <style name="input_text.vk">
        <item name="android:inputType">textWebEditText</item>
        <item name="android:hint">@string/vk_hint</item>
        <item name="android:text">@string/vk_text</item>
    </style>
    <style name="input_text.repo">
        <item name="android:inputType">textWebEditText</item>
        <item name="android:hint">@string/github_hint</item>
        <item name="android:text">@string/git_text</item>
    </style>
    <style name="input_text.self">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">10</item>
        <item name="android:minLines">3</item>
        <item name="android:hint">@string/self_hint</item>
        <item name="android:text">@string/self_text</item>
    </style>

    <!--Separator-->
    <style name="separator_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_72</item>
        <item name="android:background">@color/separator</item>
    </style>
    <style name="separator_vertical">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:background">@color/separator</item>
    </style>
</resources>
