<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--Text Style-->
    <style name="text">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="text.statistic">
        <item name="android:textColor">@color/text_statistic</item>
    </style>
    <style name="text.user_info">
        <item name="android:textColor">@color/text_information</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>
    <style name="text.login_header_information">
        <item name="android:textColor">@color/text_login</item>
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:text">@string/login_header_text</item>
    </style>
    <style name="text.login_btn">
        <item name="android:text">@string/login_btn</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textColor">@color/text_statistic</item>
    </style>
    <style name="text.forgot_passwd_btn">
    <item name="android:text">@string/login_forgot_password</item>
    <item name="android:textSize">@dimen/font_size_12</item>
    <item name="android:textColor">@color/text_login</item>
</style>
    <style name="drawable_head_txt">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/text_statistic</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="drawable_head_txt.name">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="drawable_head_txt.mail">
        <item name="android:textStyle">normal</item>
    </style>
    <!--/Text style-->

    <!--STATISTIC CONTAINER-->
    <style name="statistic_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_112</item>>
        <item name="android:background">@color/background_statistic</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="statistic_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="statistic" parent="text.statistic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="statistic.number">
        <item name="android:textSize">@dimen/font_size_20</item>
    </style>
    <style name="statistic.text">
        <item name="android:textSize">@dimen/font_size_14</item>
    </style>
    <style name="statistic.list_number">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@string/ff_medium</item>
        <item name="android:textSize">@dimen/font_size_20</item>
        <item name="android:textColor">@color/text_information</item>
    </style>
    <style name="statistic.list_text">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@string/ff_medium</item>
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/text_information</item>
    </style>
    <!--END STATISTIC CONTAINER-->

    <!--FLOATING ACTIONBUTTON-->
    <style name="floating_action_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/spacing_8</item>
        <item name="android:src">@drawable/fab_change_mode</item>
    </style>

    <!--USER INFORMATION-->
    <style name="user_information_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="user_information_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/spacing_72</item>
        <item name="android:layout_marginTop">@dimen/spacing_16</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_weight">0.15</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="icon.left">
        <item name="android:layout_marginLeft">@dimen/spacing_16</item>
    </style>
    <style name="icon.right">
        <item name="android:layout_marginRight">@dimen/spacing_16</item>
    </style>

    <style name="user_information_input_text_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/spacing_16</item>
    </style>
    <style name="user_information_edit_text" parent="@style/text.user_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_72</item>
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
    </style>
    <style name="user_information_edit_text.mobile">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">20</item>
        <item name="android:hint">@string/hint_mobile</item>
    </style>
    <style name="user_information_edit_text.email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/hint_email</item>
    </style>
    <style name="user_information_edit_text.vk">
        <item name="android:inputType">textImeMultiLine</item>
        <item name="android:maxLines">2</item>
        <item name="android:hint">@string/hint_vk</item>
    </style>
    <style name="user_information_edit_text.github">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">3</item>
        <item name="android:hint">@string/hint_github</item>
    </style>
    <style name="user_information_edit_text.about">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">1</item>
        <item name="android:hint">@string/hint_about</item>
    </style>
    <!-- END USER INFORMATION-->

    <!--Separator-->
    <style name="separator_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_88</item>
        <item name="android:background">@color/background_separator</item>
    </style>
    <style name="separator_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">@dimen/size_56</item>
        <item name="android:background">@color/background_separator</item>
    </style>
    <!--/Separator-->

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <!--Drawable Menu-->
    <style name="drawable_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingBottom">@dimen/spacing_8</item>
    </style>
    <style name="drawer_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_172</item>
        <item name="android:paddingTop">@dimen/spacing_24</item>
        <item name="android:paddingBottom">@dimen/spacing_8</item>
        <item name="android:paddingLeft">@dimen/spacing_16</item>
        <item name="android:paddingRight">@dimen/spacing_16</item>
    </style>
    <style name="drawer_avatar">
        <item name="android:layout_width">@dimen/size_60</item>
        <item name="android:layout_height">@dimen/size_60</item>
        <item name="android:layout_marginTop">@dimen/spacing_16</item>
    </style>

    <style name="menu_header_txt_holder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_56</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="drawer_txt_name" parent="drawable_head_txt.name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="drawer_txt_mail" parent="drawable_head_txt.mail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--/Drawable Menu-->

    <!--LogIn-->
    <style name="login_main_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/spacing_48</item>
        <item name="android:layout_marginRight">@dimen/spacing_48</item>
    </style>
    <style name="login_child_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/background_white</item>
    </style>
    <style name="login_information">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_28</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="login_header_txt" parent="text.login_header_information">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="user_information_edit_text.login">
        <item name="android:inputType">text</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">@string/hint_login</item>
    </style>
    <style name="user_information_edit_text.password">
        <item name="android:inputType">textPassword</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">@string/hint_password</item>
    </style>
    <style name="login_auth_btn" parent="text.login_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_16</item>
        <item name="android:layout_marginLeft">@dimen/spacing_48</item>
        <item name="android:layout_marginRight">@dimen/spacing_48</item>
        <item name="android:background">@drawable/shape_rectangle</item>
    </style>
    <style name="login_forgot_passwd_btn" parent="text.forgot_passwd_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_16</item>
    </style>
    <style name="login_magic_view">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:layout_marginTop">@dimen/spacing_32</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@color/text_login</item>
    </style>
    <!--End LogIn-->


    <!--Toolbar-->
    <style name="ToolbarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/text_toolbar</item>
        <item name="android:textColorSecondary">@color/text_toolbar</item>
        <item name="android:actionMenuTextColor">@color/text_toolbar</item>
    </style>
</resources>
