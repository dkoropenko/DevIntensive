<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--Text Style-->
    <style name="text">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="text.profile">
        <item name="android:textColor">@color/txt_profile</item>
    </style>
    <style name="text.user_info">
        <item name="android:textColor">@color/txt_user_info</item>
        <item name="android:textSize">@dimen/font_size_18</item>
    </style>
    <style name="drawable_head_txt">
        <item name="android:textSize">@dimen/font_size_14</item>
        <item name="android:textColor">@color/txt_profile</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="drawable_head_txt.name">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="drawable_head_txt.mail">
        <item name="android:textStyle">normal</item>
    </style>
    <!--/Text style-->

    <!--HEAD-->
    <style name="profile_info">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="profile" parent="text.profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="profile.num">
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>
    <style name="profile.txt">
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>
    <!--/HEAD-->


    <!--Body-->
    <!-- Information container -->
    <style name="user_info_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_72</item>
        <item name="android:layout_marginTop">@dimen/spacing_24</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="icon.left">
        <item name="android:layout_marginLeft">@dimen/spacing_16</item>
    </style>
    <style name="icon.right">
        <item name="android:layout_marginRight">@dimen/spacing_16</item>
    </style>

    <!--InputTextEdits-->
    <style name="input_text_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/spacing_16</item>
    </style>
    <style name="edit_text" parent="@style/text.user_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
    </style>
    <style name="edit_text.mobile">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">25</item>
        <item name="android:hint">@string/hint_mobile</item>
    </style>
    <style name="edit_text.email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/hint_email</item>
    </style>
    <style name="edit_text.vk">
        <item name="android:inputType">textImeMultiLine</item>
        <item name="android:maxLines">2</item>
        <item name="android:hint">@string/hint_vk</item>
    </style>
    <style name="edit_text.repo">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">3</item>
        <item name="android:hint">@string/hint_github</item>
    </style>
    <style name="edit_text.self">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">1</item>
        <item name="android:hint">@string/hint_about</item>
    </style>
    <style name="edit_text.login">
        <item name="android:inputType">text</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">@string/hint_login</item>
    </style>
    <style name="edit_text.password">
        <item name="android:inputType">textPassword</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:hint">@string/hint_password</item>
    </style>
    <!--/Body-->

    <!--Separator-->
    <style name="separator_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_88</item>
        <item name="android:background">@color/background_separator</item>
    </style>
    <style name="separator_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_separator</item>
    </style>
    <!--/Separator-->

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <!--Drawable Menu-->
    <style name="drawer_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_172</item>
        <item name="android:paddingTop">@dimen/spacing_24</item>
        <item name="android:paddingBottom">@dimen/spacing_8</item>
        <item name="android:paddingLeft">@dimen/spacing_16</item>
        <item name="android:paddingRight">@dimen/spacing_16</item>
    </style>
    <style name="drawer_avatar">
        <item name="android:layout_width">@dimen/size_60</item>
        <item name="android:layout_height">@dimen/size_60</item>
        <item name="android:layout_marginTop">@dimen/spacing_16</item>
    </style>

    <style name="menu_header_txt_holder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_56</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="drawer_txt_name" parent="drawable_head_txt.name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/my_profile_name</item>
    </style>
    <style name="drawer_txt_mail" parent="drawable_head_txt.mail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/my_profile_mail</item>
    </style>
    <!--/Drawable Menu-->

</resources>
