<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_coordination_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.softdesign.devintensive.ui.activities.LogInActivity">

    <RelativeLayout
        style="@style/login_main_container">

        <android.support.v7.widget.CardView
            android:id="@+id/login_card_view"
            style="@style/login_child_container"
            app:cardCornerRadius="4dp">

            <LinearLayout
                style="@style/login_information">

                <TextView
                    style="@style/login_header_txt"/>

                <android.support.design.widget.TextInputLayout
                    style="@style/user_information_edit_text">

                    <EditText
                        android:id="@+id/login_user"
                        style="@style/user_information_edit_text.login"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    style="@style/user_information_edit_text">

                    <EditText
                        android:id="@+id/login_password"
                        style="@style/user_information_edit_text.password"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/login_auth_btn"
                    style="@style/login_auth_btn"/>

                <TextView
                    android:id="@+id/login_remember_paswd"
                    style="@style/login_forgot_passwd_btn"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            style="@style/login_magic_view"/>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
