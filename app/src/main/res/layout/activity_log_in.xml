<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.softdesign.devintensive.ui.activities.LogInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/spacing_72"
        android:layout_marginRight="@dimen/spacing_72">

        <android.support.v7.widget.CardView
            android:id="@+id/login_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_white"
            android:paddingLeft="0dp"
            app:cardCornerRadius="@dimen/spacing_8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_28"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_header_text"
                    android:textColor="@color/txt_login_main"
                    android:textSize="@dimen/font_size_20"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_16">

                    <android.support.design.widget.TextInputEditText
                        style="@style/edit_text.login"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_16">

                    <android.support.design.widget.TextInputEditText
                        style="@style/edit_text.password"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_32"
                    android:layout_marginRight="@dimen/spacing_32"
                    android:layout_marginTop="@dimen/spacing_28"
                    android:background="@drawable/shape_rectangle"
                    android:text="@string/login_btn"
                    android:textColor="@color/txt_profile"
                    android:textSize="@dimen/font_size_18"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:text="@string/login_forgot_password"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <View
            android:layout_width="3dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/spacing_28"
            android:elevation="3dp"
            android:background="@color/txt_login_main"/>
    </RelativeLayout>


</LinearLayout>
