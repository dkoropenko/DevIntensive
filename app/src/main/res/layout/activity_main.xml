<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Toolbar-->
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_profile">
            
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/background_profile"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_256"
                    android:fitsSystemWindows="true">

                    <ImageView
                        android:id="@+id/user_photo_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar"
                        android:scaleType="centerCrop"/>

                    <RelativeLayout
                        android:id="@+id/user_photo_change"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/nav_header_bg"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/font_size_20"
                            android:layout_above="@+id/new_user_avatar"
                            android:text="@string/avatar_load"/>

                        <ImageView
                            android:id="@+id/new_user_avatar"
                            android:layout_width="@dimen/new_photo_size"
                            android:layout_height="@dimen/new_photo_size"
                            android:layout_marginBottom="@dimen/spacing_48"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_add_a_photo_black_24dp"/>

                    </RelativeLayout>
                </FrameLayout>



                <android.support.v7.widget.Toolbar
                    android:theme="@style/AppTheme.PopupOverlay"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:fitsSystemWindows="true"
                    android:titleTextColor="@color/background_profile"
                    app:layout_collapseMode="pin"/>


            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <!--Content-->
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spacing_48"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <include layout="@layout/contant_main"/>
        </android.support.v4.widget.NestedScrollView>

        <!--HEAD-->
        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/spacing_24"
            android:paddingBottom="@dimen/spacing_24"
            android:background="@color/background_profile"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_anchor="@id/nested_scroll_view"
            app:layout_anchorGravity="top"
            app:layout_behavior=".ui.views.behaviors.InfoPanelBehavior">

            <!--Рейтинг-->
            <LinearLayout
                style="@style/profile_info"
                android:layout_weight="0.25">
                <TextView
                    style="@style/profile.num"
                    android:text="99"/>
                <TextView
                    style="@style/profile.txt"
                    android:text="Рейтинг"/>
            </LinearLayout>
            <View
                style="@style/separator_vertical"/>

            <!--Количество строк-->
            <LinearLayout
                style="@style/profile_info"
                android:layout_weight="0.5">
                <TextView
                    style="@style/profile.num"
                    android:text="10 000"/>
                <TextView
                    style="@style/profile.txt"
                    android:text="Написано строк кода"/>
            </LinearLayout>
            <View
                style="@style/separator_vertical"/>

            <!--Проекты-->
            <LinearLayout
                style="@style/profile_info"
                android:layout_weight="0.25">
                <TextView
                    style="@style/profile.num"
                    android:text="8"/>
                <TextView
                    style="@style/profile.txt"
                    android:text="Проектов"/>
            </LinearLayout>
        </LinearLayout>

        <!--FloatActionButton-->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_marginRight="@dimen/fab_right_margin"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"/>
    </android.support.design.widget.CoordinatorLayout>


    <!--Drawable menu-->
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:menu="@menu/drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>





